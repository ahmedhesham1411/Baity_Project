<?xml version="1.0" encoding="UTF-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    tools:context=".Activities.Qibla.Qibla"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="start">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/btnBack"
                android:src="@drawable/ic_back_vector"
                android:layout_marginTop="@dimen/_12sdp"/>


            <com.example.baity.Designs.MyTextViewBold
                android:id="@+id/islamicDate"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:text="10.10.2020"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"/>



        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/menuBTN"
            android:layout_margin="@dimen/_12sdp" />

        <Space
            android:layout_height="@dimen/_80sdp"
            android:layout_width="match_parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_height="@dimen/_170sdp"
            android:layout_width="@dimen/_170sdp"
            android:id="@+id/qibla_img"
            android:src="@drawable/qibla"
            android:layout_gravity="center"/>

        <Space
            android:layout_height="@dimen/_150sdp"
            android:layout_width="match_parent"/>


        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/prayer">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/qiblaback"
                android:scaleType="fitXY"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:background="#000"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:alpha="0.30">
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/white"
                            android:text="fajr"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/fajr"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/white"
                            android:text="00.00"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <Space
                        android:layout_height="match_parent"
                        android:layout_width="@dimen/_15sdp"/>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/white"
                            android:text="zuhr"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/zuhr"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/white"
                            android:text="00.00"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <Space
                        android:layout_height="match_parent"
                        android:layout_width="@dimen/_15sdp"/>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/white"
                            android:text="asr"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/asr"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/white"
                            android:text="00.00"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <Space
                    android:layout_height="@dimen/_10sdp"
                    android:layout_width="match_parent"/>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/white"
                            android:text="maghrb"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/maghrb"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/white"
                            android:text="00.00"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <Space
                        android:layout_height="match_parent"
                        android:layout_width="@dimen/_15sdp"/>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@color/white"
                            android:text="isha"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/isha"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/white"
                            android:text="00.00"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>