<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Child_resault.Sub_category_result"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="start">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back_vector"
            android:layout_marginTop="@dimen/_12sdp"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/favorieBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/settingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting"
                android:layout_gravity="center"
                />

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp"
        android:id="@+id/myframe1">

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/vv"/>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="bottom">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/black"
            android:alpha="0.38"
            android:layout_gravity="end"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.baity.Designs.MyTextViewBold
                android:id="@+id/slider_sub_namee"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_18sdp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>





    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.example.baity.Designs.MyTextViewNormal
            android:id="@+id/desc_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            android:padding="@dimen/_10sdp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.example.baity.Designs.MyButtonBold
            android:id="@+id/btn_go_review"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/btn"
            android:text="Show Company Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>