<?xml version="1.0" encoding="UTF-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_130sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_id"
    android:padding="@dimen/_3sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.smarteist.autoimageslider.SliderView
            android:layout_height="@dimen/_130sdp"
            android:layout_width="match_parent"
            app:sliderStartAutoCycle="true"
            app:sliderScrollTimeInSec="1"
            app:sliderIndicatorUnselectedColor="@color/colorPrimaryDark"
            app:sliderIndicatorSelectedColor="@color/black"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderCircularHandlerEnabled="true"
            app:sliderAutoCycleEnabled="true"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAnimationDuration="600"
            android:id="@+id/imageSliderr"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="bottom">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@color/black"
                android:alpha="0.38"
                android:layout_gravity="end"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.baity.Designs.MyTextViewBold
                android:id="@+id/slider_namewe"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:text="testsdfsdfsdf"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
