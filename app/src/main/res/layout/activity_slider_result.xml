<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Slider_Result.Slider_result"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="start">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back_vector"
            android:layout_marginTop="@dimen/_12sdp"/>


        <com.example.baity.Designs.MyTextViewBold
            android:id="@+id/islamicDate"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="10.10.2020"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">


            </androidx.appcompat.widget.LinearLayoutCompat>


            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/settingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting"
                android:layout_gravity="center"
                />

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:scaleType="fitXY"
            android:id="@+id/aaaaaaaaaaa"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="bottom">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/black"
            android:alpha="0.38"
            android:layout_gravity="end"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.baity.Designs.MyTextViewBold
                android:id="@+id/slider_nameee"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="testsdfsdfsdf"
                android:textSize="@dimen/_18sdp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/res"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>

</androidx.appcompat.widget.LinearLayoutCompat>