<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Forget_password.Forget_password">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.45"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back_vector" />

        <com.example.baity.Designs.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"/>

    </androidx.appcompat.widget.Toolbar>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <com.example.baity.Designs.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_gravity="center"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"/>

        <com.example.baity.Designs.MyEditTextBold
            android:id="@+id/Forget_password_email"
            android:layout_width="@dimen/_205sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:gravity="start"
            android:hint="@string/email"
            android:paddingStart="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:paddingTop="@dimen/_15sdp"
            android:textAlignment="viewStart"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"/>

        <com.example.baity.Designs.MyButtonBold
            android:id="@+id/btnReset"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:background="@drawable/btn"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textAllCaps="false"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>