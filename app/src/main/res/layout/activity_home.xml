<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Home.Home"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        tools:context=".MainActivity"
        android:visibility="gone"
        android:id="@+id/search_layout"
        android:background="@color/light_gray"
        android:layout_gravity="center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <AutoCompleteTextView
                    android:id="@+id/bahs"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="@string/search"
                    android:backgroundTint="@color/black"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/_14ssp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_search_black_24dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    />

                <Button
                    android:id="@+id/cancelSearch"
                    android:paddingTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingEnd="@dimen/_10sdp"
                    android:maxLines="1"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="start">


        <com.example.baity.Designs.MyTextViewBold
            android:id="@+id/islamicDate"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="10.10.2020"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/settingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting"/>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/home_layout"
        android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:layout_gravity="center_vertical">


        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSliderHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleEnabled="true"
            app:sliderCircularHandlerEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorSelectedColor="@color/black"
            app:sliderIndicatorUnselectedColor="@color/colorPrimaryDark"
            app:sliderScrollTimeInSec="3"
            app:sliderStartAutoCycle="true"/>


    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtShortMessage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:singleLine="true" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/searchBar">

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"/>

            <com.example.baity.Designs.MyEditTextNormal
                android:id="@+id/goToSearch"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:hint="@string/search"
                android:backgroundTint="@color/black"
                android:layout_gravity="bottom"
                android:textSize="@dimen/_10ssp"
                android:paddingStart="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:drawableStart="@drawable/ic_search_black_24dp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view1"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="gone"
            android:background="@color/black"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
