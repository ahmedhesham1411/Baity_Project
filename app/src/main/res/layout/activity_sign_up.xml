<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Register.SignUp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.45"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back_vector"
            android:layout_marginTop="@dimen/_12sdp"
            android:visibility="gone"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


    <com.example.baity.Designs.MyTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:layout_gravity="center"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"/>

        <FrameLayout
            android:id="@+id/uploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/backg" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/plus"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_90sdp"/>

        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <com.example.baity.Designs.MyEditTextNormal
                android:id="@+id/editFirstName"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/first_name"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_gravity="start"
                android:gravity="start"
                />

            <Space
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_40sdp"/>

            <com.example.baity.Designs.MyEditTextNormal
                android:id="@+id/editLastName"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/last_name"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:paddingTop="@dimen/_15sdp"
                android:layout_gravity="start"
                android:gravity="start"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>



        <com.example.baity.Designs.MyEditTextNormal
            android:id="@+id/editEmail"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:hint="@string/email"
            android:backgroundTint="@color/white"
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:paddingTop="@dimen/_15sdp"
            />



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined" />

            <com.example.baity.Designs.MyEditTextNormal
                android:id="@+id/editPhone"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_40sdp"
                android:paddingStart="@dimen/_10sdp"
                android:hint="@string/phone_number"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:paddingTop="@dimen/_15sdp"
                android:inputType="phone"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.example.baity.Designs.MyEditTextNormal
            android:id="@+id/editPassword"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:gravity="start"
            android:hint="@string/password"
            android:paddingStart="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:paddingTop="@dimen/_15sdp"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            />

            <com.example.baity.Designs.MyEditTextNormal
                android:id="@+id/editConfirmPassword"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:hint="@string/confirm_password"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:paddingTop="@dimen/_15sdp"
                android:password="true"
                tools:ignore="Deprecated,RtlCompat"
                android:textAlignment="viewStart" />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkBox"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:theme="@style/colored_checkBox"
            android:text="@string/i_agree_to_baity_s_terms_of_use"
            android:textSize="@dimen/_12ssp"/>


        <com.example.baity.Designs.MyButtonBold
            android:id="@+id/btnsignup"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:background="@drawable/btn"
            android:text="@string/sign_up"
            android:textColor="#fff"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textAllCaps="false"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>