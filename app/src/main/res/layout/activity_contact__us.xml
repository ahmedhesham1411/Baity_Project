<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Contact_Us">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.45"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="start">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back_vector"
            android:layout_marginTop="@dimen/_12sdp"/>

        <com.example.baity.Designs.MyTextViewBold
            android:id="@+id/islamicDate"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="@string/contact_us"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <com.example.baity.Designs.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/phone"
            android:text="@string/_01111111111"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:drawablePadding="@dimen/_10sdp"/>



        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"/>

        <com.example.baity.Designs.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/language"
            android:text="@string/www_baity_com"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:drawablePadding="@dimen/_10sdp"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"/>

            <com.example.baity.Designs.MyTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ektrahat"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:layout_gravity="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"/>

            <com.example.baity.Designs.MyEditTextNormal
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_130sdp"
                android:background="@color/white"
                android:textSize="@dimen/_14ssp"
                android:layout_gravity="center"
                android:hint="@string/contact_us"
                android:gravity="start"
                android:padding="@dimen/_5sdp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>

            <com.example.baity.Designs.MyButtonBold
                android:id="@+id/btn_login"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@drawable/btn"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textAllCaps="false"
                />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/facebook_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f" />

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/twitter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contacttwitter" />
            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gmail_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/whatsapp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>



</FrameLayout>